doctype html
html
  head
    title A Brief History Of Time
    style
      include ../stylesheets/style.css

  include navigation.pug

  body
    h1 Book: #{details.title}
    form(method='POST')
      p
        label(for='title') Title
          input(id='title' type='text' value=`${details.title}`)
      p
        label(for='author') Author
          input(id='author' type='text' value=`${details.author}`)
      p
        label(for='genre') Genre
          input(id='genre' type='text' value=`${details.genre}`)
      p
        label(for='first_published') First Published
          input(id='first_published' type='text' value=`${details.first_published}`)
      p
        input(type='submit' value='Update')

    h2 Loan History
    table
      thead
        tr
          th Book
          th Patron
          th Loaned on
          th Return by
          th Returned on
          th Action
