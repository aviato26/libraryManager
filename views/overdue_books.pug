doctype html
html
  head
    title Books
    style
      include ../stylesheets/style.css

  include navigation.pug

  body
    h1 Overdue Books
    p
      a(href='new_book' class='button') Create New Book
      p Filters #{''}
        a(href='all_books') All | #{''}
        a(href='overdue_books') Overdue | #{''}
        a(href='checked_books') Checked Out |

    table
      thead
        tr
          th Title
          th Author
          th Genre
          th Year Released

      tbody
        each book in books
          tr
            td
              a(href=`/books/${book.dataValues.id}`) #{book.dataValues.title}
            td #{book.dataValues.author}
            td #{book.genre}
            td #{book.first_published}
