doctype html
html
  head
    title Return Book
    style
      include ../stylesheets/style.css

  include navigation

  body
    h1 Patron: #{patron.name}
    p
      strong Book Title: #{patron.title}
    p
      strong Loaned By: #{patron.name}
    p
      strong Loaned On: #{patron.loanOn}
    p
      strong Return By: #{patron.returnBy}

    form(method='post')
      p
        label(for='returned_on') Returned on:
          input(id='returned_on' type='text' value=`${new Date().toISOString().slice(0,10)}` name='date' required)
      p
        input(type='submit')
